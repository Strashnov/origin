unit DistanceByCoordinates;

interface

Type
  /// <summary>
  /// Distanse
  /// </summary>
  /// <param name = "Xa,Ya,Xb,Yb">
  /// Coordinates
  /// </param>
  /// <returns>
  /// length by coordinates
  /// </returns>
  TDistance = class sealed
  private
    FXa: Single;
    FYa: Single;
    FXb: Single;
    FYb: Single;
  public
    procedure CMDMessage;
    function XYAB: Single;
  end;

  { TDistance }
implementation

{ TDistance }

procedure TDistance.CMDMessage;
var
  Xa, Ya, Xb, Yb: Single;
begin
  Writeln('EnterCoordinats ');
  Readln(Xa, Ya, Xb, Yb);
  FXa := Xa;
  FYa := Ya;
  FXb := Xb;
  FYb := Yb;
end;

function TDistance.XYAB: Single;
begin
  Result := sqrt(sqr(FXa - FXb) + sqr(FYa - FYb));
end;

end.
